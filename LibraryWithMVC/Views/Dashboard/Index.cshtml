    </div>
</div>

<!-- Çıkış Butonu -->
<a href="/Exit/Index/" class="btn btn-danger btn-circle position-fixed" style="top: 15px; right: 15px; z-index: 1000;">
    <span class="material-icons">exit_to_app</span>
</a>

<style>
    /* Kartların Stili */
    .card {
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-body {
        padding: 2rem;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .btn {
        font-size: 1.125rem;
        padding: 1rem;
    }

    /* Çıkış Butonu Stili */
    .btn-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        padding: 0;
    }

    .position-fixed {
        position: fixed;
    }

    /* Daire Arka Planı */
    .position-relative {
        position: relative;
        padding: 25px 0;
    }

    .position-absolute.bg-light {
        border-radius: 50%;
        height: 200px;
        width: 200px;
        top: 10%;
        left: 50%;
        transform: translateX(-50%) scale(1.2);
        opacity: 0.1;
    }
</style>
