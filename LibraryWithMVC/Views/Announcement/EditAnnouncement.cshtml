@model LibraryWithMVC.Models.Entity.tbl_announcement

@{
    ViewBag.Title = "Duyuru Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Duyuru Düzenle</h2>
<hr />

@using (Html.BeginForm("EditAnnouncement", "Announcement", FormMethod.Post))
{
    @Html.HiddenFor(x => x.anc_id)

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.anc_category, "Kategori")
        @Html.TextBoxFor(x => x.anc_category, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.anc_category, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.anc_title, "Başlık")
        @Html.TextBoxFor(x => x.anc_title, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.anc_title, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.anc_message, "Duyuru")
        @Html.TextAreaFor(x => x.anc_message, new { @class = "form-control", rows = "5", @required = "@required" })
        @Html.ValidationMessageFor(x => x.anc_message, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Düzenle</button>
    </div>
}