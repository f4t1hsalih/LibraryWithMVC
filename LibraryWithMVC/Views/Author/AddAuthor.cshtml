@model LibraryWithMVC.Models.Entity.tbl_author

@{
    ViewBag.Title = "Yazar Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazar Kayıt</h2>
<hr />

@using (Html.BeginForm("AddAuthor", "Author", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ath_id)

    <div class="form-group" style="margin-top: 10px;">
        @Html.LabelFor(x => x.ath_name, "Yazar Adı")
        @Html.TextBoxFor(x => x.ath_name, new { @class = "form-control" })
    </div>

    <div class="form-group" style="margin-top: 10px;">
        @Html.LabelFor(x => x.ath_surname, "Yazar Soyadı")
        @Html.TextBoxFor(x => x.ath_surname, new { @class = "form-control" })
    </div>

    <div class="form-group" style="margin-top: 10px;">
        @Html.LabelFor(x => x.ath_detail, "Detay")
        @Html.TextAreaFor(x => x.ath_detail, new { @class = "form-control", rows = "5" })
    </div>

    <div class="form-group" style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
}
