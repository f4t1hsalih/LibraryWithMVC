@model LibraryWithMVC.Models.Entity.tbl_author

@{
    ViewBag.Title = "Yazar Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazar Bilgileri Güncelle</h2>
<hr />

@using (Html.BeginForm("EditAuthor", "Author", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ath_id)

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.ath_name, "Yazar Adı")
        @Html.TextBoxFor(x => x.ath_name, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.ath_name, "", new { @style = "color:red" })

    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.ath_surname, "Yazar Soyadı")
        @Html.TextBoxFor(x => x.ath_surname, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.ath_surname, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.ath_detail, "Detay")
        @Html.TextAreaFor(x => x.ath_detail, new { @class = "form-control", rows = "5" })
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
}
