<!DOCTYPE html>
<html lang="tr">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/tasarim.css" rel="stylesheet" />
    <link href="~/Content/table_style.css" rel="stylesheet" />
</head>
<body>

    <div class="sidebar">
        <div class="logo">
            Kütüphane Sistemi
        </div>
        <ul>
            <li>
                <a href="/Dashboard/Index/">
                    <span class="material-icons">home</span>
                    <span>Ana Sayfa</span>
                </a>
            </li>
            <li>
                <a href="/Book/Index/">
                    <span class="material-icons">menu_book</span>
                    <span>Kitaplar</span>
                </a>
            </li>
            <li>
                <a href="/Category/Index/">
                    <span class="material-icons">category</span>
                    <span>Kategoriler</span>
                </a>
            </li>
            <li>
                <a href="/Author/Index/">
                    <span class="material-icons">person</span>
                    <span>Yazarlar</span>
                </a>
            </li>
            <li>
                <a href="/Member/Index/">
                    <span class="material-icons">people</span>
                    <span>Üyeler</span>
                </a>
            </li>
            <li>
                <a href="/Staff/Index/">
                    <span class="material-icons">badge</span>
                    <span>Personeller</span>
                </a>
            </li>
            <li>
                <a href="/Movement/Index/">
                    <span class="material-icons">work</span>
                    <span>İşlemler</span>
                </a>
            </li>
            <li class="submenu-toggle">
                <a href="#">
                    <span class="material-icons">swap_horiz</span>
                    <span>Emanet İşlemleri</span>
                    <span class="material-icons" style="margin-left:auto;">expand_more</span>
                </a>
                <ul class="submenu">
                    <li>
                        <a href="/Borrow/Lend/">
                            <span class="material-icons">arrow_forward</span>
                            <span>Kitap Ver</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Borrow/ReturnTheBook/">
                            <span class="material-icons">arrow_back</span>
                            <span>Geri Al</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="/Showcase/Index/">
                    <span class="material-icons">shop</span>
                    <span>Vitrin</span>
                </a>
            </li>
            <li>
                <a href="/Statistic/Gallery/">
                    <span class="material-icons">photo</span>
                    <span>Galeri</span>
                </a>
            </li>
            <li>
                <a href="/Statistic/Index/">
                    <span class="material-icons">bar_chart</span>
                    <span>İstatistikler</span>
                </a>
            </li>
            <li>
                <a href="/Statistic/LinqCards/">
                    <span class="material-icons">layers</span>
                    <span>Linq Kartları</span>
                </a>
            </li>
            <li class="submenu-toggle">
                <a href="#">
                    <span class="material-icons">cloud</span>
                    <span>Hava Durumu İşlemleri</span>
                    <span class="material-icons" style="margin-left:auto;">expand_more</span>
                </a>
                <ul class="submenu">
                    <li>
                        <a href="/Statistic/Weather/">
                            <span class="material-icons">cloud_circle</span>
                            <span>Sabit Hava Durumu</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Statistic/WeatherCard/">
                            <span class="material-icons">card_giftcard</span>
                            <span>Hava Durumu Kartları</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="/Exit/Index/">
                    <span class="material-icons">exit_to_app</span>
                    <span>Çıkış</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Geçerli URL'yi al
            var currentUrl = window.location.href;

            // Tüm menü öğelerini kontrol et
            document.querySelectorAll('.sidebar ul li a').forEach(function (link) {
                if (link.href === currentUrl) {
                    // Alt menü öğesi ise
                    if (link.closest('.submenu')) {
                        link.closest('.submenu').style.display = 'block';
                        link.closest('.submenu').parentElement.classList.add('active');
                    }
                    // Üst menü öğesi ise
                    else {
                        link.parentElement.classList.add('active');
                    }
                }
            });

            // Ana menü öğelerine tıklama olayını ekle
            document.querySelectorAll('.sidebar ul li a').forEach(function (link) {
                link.addEventListener('click', function () {
                    var parentLi = link.parentElement;
                    var submenu = parentLi.querySelector('.submenu');

                    if (submenu) {
                        parentLi.classList.toggle('active');
                        submenu.style.display = submenu.style.display === 'block' ? 'none' : 'block';
                    }
                });
            });
        });

    </script>
</body>
</html>
