<!DOCTYPE html>
<html lang="tr">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f6f8;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 260px;
            height: 100%;
            background-color: #2c3e50;
            padding-top: 20px;
            transition: width 0.3s;
            overflow-y: auto;
        }

            .sidebar .logo {
                text-align: center;
                margin-bottom: 30px;
                color: #ecf0f1;
                font-size: 24px;
                font-weight: 600;
            }

            .sidebar ul {
                list-style: none;
            }

                .sidebar ul li {
                    position: relative;
                }

                    .sidebar ul li a {
                        display: flex;
                        align-items: center;
                        padding: 15px 20px;
                        color: #bdc3c7;
                        text-decoration: none;
                        font-size: 16px;
                        transition: all 0.3s ease;
                    }

                        .sidebar ul li a:hover {
                            background-color: #34495e;
                            color: #fff;
                        }

                        .sidebar ul li a .material-icons {
                            font-size: 24px;
                            margin-right: 15px;
                        }

                    .sidebar ul li .submenu {
                        display: none;
                        flex-direction: column;
                        background-color: #34495e;
                    }

                        .sidebar ul li .submenu a {
                            padding: 12px 40px;
                            font-size: 14px;
                            color: #ecf0f1;
                        }

                            .sidebar ul li .submenu a:hover {
                                background-color: #3b556e;
                            }

                    .sidebar ul li.active > a,
                    .sidebar ul li.active > a:hover {
                        background-color: #1abc9c;
                        color: #fff;
                    }

                    .sidebar ul li.active .submenu {
                        display: flex;
                    }

        .main-content {
            margin-left: 260px;
            padding: 20px;
            min-height: 100vh;
            transition: margin-left 0.3s;
            background-color: #ecf0f1;
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 200px;
            }
        }

        @@media (max-width: 576px) {
            .sidebar {
                width: 60px;
            }

                .sidebar .logo,
                .sidebar ul li a span {
                    display: none;
                }

                .sidebar ul li a {
                    justify-content: center;
                }

                .sidebar ul li .submenu a {
                    padding: 12px 20px;
                }

            .main-content {
                margin-left: 60px;
            }
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const submenuToggle = document.querySelector('.submenu-toggle');

            submenuToggle.addEventListener('click', function (e) {
                e.preventDefault();
                this.parentElement.classList.toggle('active');
            });
        });
    </script>
</head>
<body>

    <div class="sidebar">
        <div class="logo">
            Kütüphane Sistemi
        </div>
        <ul>
            <li>
                <a href="#anasayfa">
                    <span class="material-icons">home</span>
                    <span>Ana Sayfa</span>
                </a>
            </li>
            <li>
                <a href="#kategoriler">
                    <span class="material-icons">category</span>
                    <span>Kategoriler</span>
                </a>
            </li>
            <li>
                <a href="#kitaplar">
                    <span class="material-icons">menu_book</span>
                    <span>Kitaplar</span>
                </a>
            </li>
            <li>
                <a href="#yazarlar">
                    <span class="material-icons">person</span>
                    <span>Yazarlar</span>
                </a>
            </li>
            <li>
                <a href="#uyeler">
                    <span class="material-icons">people</span>
                    <span>Üyeler</span>
                </a>
            </li>
            <li>
                <a href="#personeller">
                    <span class="material-icons">badge</span>
                    <span>Personeller</span>
                </a>
            </li>
            <li class="submenu-toggle">
                <a href="#">
                    <span class="material-icons">swap_horiz</span>
                    <span>Emanet İşlemleri</span>
                    <span class="material-icons" style="margin-left:auto;">expand_more</span>
                </a>
                <ul class="submenu">
                    <li>
                        <a href="#oduncver">
                            <span class="material-icons">arrow_forward</span>
                            <span>Ödünç Kitap Ver</span>
                        </a>
                    </li>
                    <li>
                        <a href="#oduncal">
                            <span class="material-icons">arrow_back</span>
                            <span>Ödünç Kitap Al</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="#kasa">
                    <span class="material-icons">account_balance_wallet</span>
                    <span>Kasa</span>
                </a>
            </li>
            <li>
                <a href="#islemler">
                    <span class="material-icons">work</span>
                    <span>İşlemler</span>
                </a>
            </li>
            <li>
                <a href="#ayarlar">
                    <span class="material-icons">settings</span>
                    <span>Ayarlar</span>
                </a>
            </li>
            <li>
                <a href="#yardim">
                    <span class="material-icons">help_outline</span>
                    <span>Yardım</span>
                </a>
            </li>
            <li>
                <a href="#cikis">
                    <span class="material-icons">exit_to_app</span>
                    <span>Çıkış</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

</body>
</html>
