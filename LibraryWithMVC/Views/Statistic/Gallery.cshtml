@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Galeri</h2>
<hr />

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<style>
    .gallery-container {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
    }

    .mySlides {
        display: none;
        height: 550px;
        object-fit: cover;
        border-radius: 8px;
    }

    .w3-left, .w3-right, .w3-badge {
        cursor: pointer;
    }

    .w3-badge {
        height: 13px;
        width: 13px;
        padding: 0;
    }

    .w3-display-container {
        position: relative;
    }

    .form-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control-file {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        box-sizing: border-box;
    }

    .btn-success-custom {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-success-custom:hover {
            background-color: #218838;
        }
</style>

<div class="gallery-container w3-content w3-display-container">
    <img class="mySlides" src="@Url.Content("~/Templates/web2/img/book1.jpg")" style="width:100%;">
    <img class="mySlides" src="@Url.Content("~/Templates/web2/img/book2.jpg")" style="width:100%;">
    <img class="mySlides" src="@Url.Content("~/Templates/web2/img/book3.jpg")" style="width:100%;">
    <img class="mySlides" src="@Url.Content("~/Templates/web2/img/book4.jpg")" style="width:100%;">
    <img class="mySlides" src="@Url.Content("~/Templates/web2/img/book5.jpg")" style="width:100%;">
    <div class="w3-center w3-container w3-section w3-large w3-text-white w3-display-bottommiddle" style="width:100%">
        <div class="w3-left w3-hover-text-khaki" onclick="plusDivs(-1)">&#10094;</div>
        <div class="w3-right w3-hover-text-khaki" onclick="plusDivs(1)">&#10095;</div>
        <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(1)"></span>
        <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(2)"></span>
        <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(3)"></span>
        <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(4)"></span>
        <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(5)"></span>
    </div>
</div>

<script>
    var slideIndex = 1;
    showDivs(slideIndex);

    function plusDivs(n) {
        showDivs(slideIndex += n);
    }

    function currentDiv(n) {
        showDivs(slideIndex = n);
    }

    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("demo");
        if (n > x.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = x.length }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" w3-white", "");
        }
        x[slideIndex - 1].style.display = "block";
        dots[slideIndex - 1].className += " w3-white";
    }
</script>

<div class="form-container">
    @using (Html.BeginForm("UploadFile", "Statistic", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="file" class="form-label">Dosya Seçin:</label>
            <input type="file" name="file" id="file" class="form-control-file" />
        </div>
        <div class="form-group text-center">
            <input type="submit" class="btn btn-success-custom" value="Kaydet" />
        </div>
    }
</div>

<script>
    document.querySelector('form').addEventListener('submit', function (e) {
        if (document.getElementById('file').value === '') {
            alert('Lütfen bir dosya seçin.');
            e.preventDefault();
        }
    });
</script>
