@model LibraryWithMVC.Models.Entity.tbl_staff

@{
    ViewBag.Title = "Perseonel Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personel Güncelleme</h2>
<hr />

@using (Html.BeginForm("EditStaff", "Staff", FormMethod.Post))
{
    @Html.HiddenFor(x => x.stf_id)

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.stf_name, "Personel Adı")
        @Html.TextBoxFor(x => x.stf_name, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.stf_name, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.stf_surname, "Personel Soyadı")
        @Html.TextBoxFor(x => x.stf_surname, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.stf_surname, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </div>
}
