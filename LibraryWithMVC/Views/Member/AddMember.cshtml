@model LibraryWithMVC.Models.Entity.tbl_member

@{
    ViewBag.Title = "Üye Kayıt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üye Kayıt</h2>
<hr />

@using (Html.BeginForm("AddMember", "Member", FormMethod.Post))
{
    @Html.HiddenFor(x => x.mmb_id)

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_name, "Üye Adı")
        @Html.TextBoxFor(x => x.mmb_name, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.mmb_name, "", new { @style = "color:red"})
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_surname, "Üye Soyadı")
        @Html.TextBoxFor(x => x.mmb_surname, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.mmb_surname, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_email, "Üye Mail")
        @Html.TextBoxFor(x => x.mmb_email, new { @class = "form-control", type = "email", @required = "@required" })
        @Html.ValidationMessageFor(x => x.mmb_email, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_username, "Kullanıcı Adı")
        @Html.TextBoxFor(x => x.mmb_username, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.mmb_username, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_password, "Şifre")
        @Html.TextBoxFor(x => x.mmb_password, new { @class = "form-control", @required = "@required" })
        @Html.ValidationMessageFor(x => x.mmb_password, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_photo, "Üye Fotoğraf")
        @Html.TextBoxFor(x => x.mmb_photo, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.mmb_photo, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_tel, "Üye Telefon")
        @Html.TextBoxFor(x => x.mmb_tel, new { @class = "form-control", type = "tel", @required = "@required" })
        @Html.ValidationMessageFor(x => x.mmb_tel, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        @Html.LabelFor(x => x.mmb_school, "Üye Okul")
        @Html.TextBoxFor(x => x.mmb_school, new { @class = "form-control"})
        @Html.ValidationMessageFor(x => x.mmb_school, "", new { @style = "color:red" })
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
}
